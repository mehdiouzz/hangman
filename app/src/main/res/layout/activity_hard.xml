<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HardActivity">

    <RelativeLayout
        android:id="@+id/frame"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/desert" >

        <LinearLayout
            android:id="@+id/images"
            android:layout_width="fill_parent"
            android:layout_height="160dp"
            android:layout_gravity="top"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <!--            <TextView-->
            <!--                android:id="@+id/lvl"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:gravity="left" />-->

            <ImageView
                android:id="@+id/canvas"
                android:layout_width="150dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/input"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_below="@+id/images" >

            <TextView
                android:id="@+id/radomword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#356EDF"
                android:textSize="30sp"
                android:letterSpacing="0.1"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/manbort"
                />

            <TextView
                android:id="@+id/counter"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:fontFamily="@font/brawler"
                android:gravity="center"
                android:textColor="#112142"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/hintsection"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/counter" >

                <ImageButton
                    android:id="@+id/hint"
                    android:layout_below="@+id/hintsection"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="Meaning : "
                    android:textColor="#2F8A33"
                    android:textStyle="bold"
                    android:fontFamily="@font/stronge"
                    android:gravity="left"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:src="@drawable/lampon"
                    android:onClick="displayHint"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/dict"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:fontFamily="@font/brawler"
                    android:textColor="#151E51"
                    android:text=" Meaning : "
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="4dp"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:textStyle="bold|italic"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/definition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/brawler"
                    android:textColor="#000000"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="4dp"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeMaxTextSize="20sp"
                    android:gravity="center"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/revealsection"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/hintsection" >

                <ImageButton
                    android:id="@+id/reveal"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:textColor="#2F8A33"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:src="@drawable/eye"
                    android:onClick="revealLetter" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/keyboard"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/raw1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/keyboard"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <Button
                    android:id="@+id/a"
                    android:layout_width="48dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="10dp"
                    android:text="A"
                    tools:context=".HardActivity"
                    tools:ignore="TouchTargetSizeCheck" />

                <!--            <Button-->
                <!--                android:id="@+id/q"-->
                <!--                android:layout_width="48dp"-->
                <!--                android:layout_height="45dp"-->
                <!--                android:layout_marginRight="10dp"-->
                <!--                android:background="@drawable/button_design"-->
                <!--                android:text="Q"-->
                <!--                tools:context=".HardActivity"-->
                <!--                tools:ignore="TouchTargetSizeCheck" />-->

                <Button
                    android:id="@+id/b"
                    android:layout_width="47dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="10dp"
                    android:text="B"
                    tools:context=".HardActivity"
                    tools:ignore="TouchTargetSizeCheck" />

                <Button
                    android:id="@+id/c"
                    android:layout_width="47dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="10dp"
                    android:text="C"
                    tools:context=".HardActivity"
                    tools:ignore="TouchTargetSizeCheck"
                    tools:layout_editor_absoluteX="130dp"
                    tools:layout_editor_absoluteY="393dp" />

                <Button
                    android:id="@+id/d"
                    android:layout_width="47dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="10dp"
                    android:text="D"
                    tools:ignore="TouchTargetSizeCheck"
                    tools:layout_editor_absoluteX="182dp"
                    tools:layout_editor_absoluteY="393dp" />

                <Button
                    android:id="@+id/e"
                    android:layout_width="47dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="10dp"
                    android:text="E"
                    tools:ignore="TouchTargetSizeCheck"
                    tools:layout_editor_absoluteX="236dp"
                    tools:layout_editor_absoluteY="393dp" />

                <Button
                    android:id="@+id/f"
                    android:layout_width="47dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="10dp"
                    android:text="F"
                    tools:ignore="TouchTargetSizeCheck"
                    tools:layout_editor_absoluteX="291dp"
                    tools:layout_editor_absoluteY="393dp" />

                <Button
                    android:id="@+id/g"
                    android:layout_width="47dp"
                    android:layout_height="45dp"
                    android:text="G"
                    tools:ignore="TouchTargetSizeCheck" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/raw2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@+id/raw1"
                android:orientation="horizontal"
                android:weightSum="1">

                <Button
                    android:id="@+id/h"
                    android:layout_width="47dp"
                    android:layout_height="45dp"
                    android:text="H"
                    tools:ignore="TouchTargetSizeCheck"
                    android:layout_marginRight="10dp"/>

                <Button
                    android:id="@+id/i"
                    android:layout_width="47dp"
                    android:layout_height="45dp"
                    android:text="I"
                    tools:ignore="TouchTargetSizeCheck"
                    android:layout_marginRight="10dp"/>

                <Button
                    android:id="@+id/j"
                    android:layout_width="47dp"
                    android:layout_height="45dp"
                    android:text="J"
                    tools:ignore="TouchTargetSizeCheck"
                    android:layout_marginRight="10dp"/>

                <Button
                    android:id="@+id/k"
                    android:layout_width="47dp"
                    android:layout_height="45dp"
                    android:text="K"
                    tools:ignore="TouchTargetSizeCheck"
                    android:layout_marginRight="10dp"/>

                <Button
                    android:id="@+id/l"
                    android:layout_width="47dp"
                    android:layout_height="45dp"
                    android:text="L"
                    tools:ignore="TouchTargetSizeCheck"
                    android:layout_marginRight="10dp"/>

                <Button
                    android:id="@+id/m"
                    android:layout_width="47dp"
                    android:layout_height="45dp"
                    android:text="M"
                    tools:ignore="TouchTargetSizeCheck"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/raw3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@+id/raw2"
                android:orientation="horizontal"
                android:weightSum="1" >

                <Button
                    android:id="@+id/n"
                    android:layout_width="47dp"
                    android:layout_height="45dp"
                    android:text="N"
                    tools:ignore="TouchTargetSizeCheck"
                    android:layout_marginRight="10dp"/>

                <Button
                    android:id="@+id/o"
                    android:layout_width="47dp"
                    android:layout_height="45dp"
                    android:text="O"
                    tools:ignore="TouchTargetSizeCheck"
                    android:layout_marginRight="10dp"/>

                <Button
                    android:id="@+id/p"
                    android:layout_width="47dp"
                    android:layout_height="45dp"
                    android:text="P"
                    tools:ignore="TouchTargetSizeCheck"
                    android:layout_marginRight="10dp"/>

                <Button
                    android:id="@+id/q"
                    android:layout_width="47dp"
                    android:layout_height="45dp"
                    android:text="Q"
                    tools:ignore="TouchTargetSizeCheck"
                    android:layout_marginRight="10dp"/>

                <Button
                    android:id="@+id/r"
                    android:layout_width="47dp"
                    android:layout_height="45dp"
                    android:text="R"
                    tools:ignore="TouchTargetSizeCheck"
                    android:layout_marginRight="10dp"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/raw4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@+id/raw3"
                android:orientation="horizontal"
                android:weightSum="1" >

                <Button
                    android:id="@+id/s"
                    android:layout_width="47dp"
                    android:layout_height="45dp"
                    android:text="S"
                    tools:ignore="TouchTargetSizeCheck"
                    android:layout_marginRight="10dp"/>

                <Button
                    android:id="@+id/t"
                    android:layout_width="47dp"
                    android:layout_height="45dp"
                    android:text="T"
                    tools:ignore="TouchTargetSizeCheck"
                    android:layout_marginRight="10dp"/>

                <Button
                    android:id="@+id/u"
                    android:layout_width="47dp"
                    android:layout_height="45dp"
                    android:text="U"
                    tools:ignore="TouchTargetSizeCheck"
                    android:layout_marginRight="10dp"/>

                <Button
                    android:id="@+id/v"
                    android:layout_width="47dp"
                    android:layout_height="45dp"
                    android:text="V"
                    tools:ignore="TouchTargetSizeCheck"
                    android:layout_marginRight="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/raw5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/raw4"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <Button
                    android:id="@+id/w"
                    android:layout_width="47dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="10dp"
                    android:text="W"
                    tools:ignore="TouchTargetSizeCheck" />

                <Button
                    android:id="@+id/x"
                    android:layout_width="47dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="10dp"
                    android:text="X"
                    tools:ignore="TouchTargetSizeCheck" />

                <Button
                    android:id="@+id/y"
                    android:layout_width="47dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="10dp"
                    android:text="Y"
                    tools:ignore="TouchTargetSizeCheck" />

                <Button
                    android:id="@+id/z"
                    android:layout_width="47dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="10dp"
                    android:text="Z"
                    tools:ignore="TouchTargetSizeCheck" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/keyboard"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="invisible">

            <!--            <Button-->
            <!--                android:id="@+id/reload"-->
            <!--                android:layout_width="100dp"-->
            <!--                android:layout_height="80dp"-->
            <!--                android:gravity="center"-->
            <!--                android:text="Reload" />-->

            <ImageButton
                android:id="@+id/reload"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/my_custom_selector"
                android:gravity="center"
                android:onClick="reload"
                android:scaleType="fitCenter"
                android:src="@drawable/reload" />

            <TextView
                android:id="@+id/tmpword"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="goback" />

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>