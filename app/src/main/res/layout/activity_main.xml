<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/frame"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF" >

        <LinearLayout
            android:id="@+id/images"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_gravity="top"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/canvas"
                android:layout_width="150dp"
                android:layout_height="fill_parent"
                android:background="#8C3636"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/input"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/images" >

            <TextView
                android:id="@+id/radomword"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#00BCD4"
                android:gravity="center"
                android:textColor="#356EDF"
                android:textSize="34sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/hintsection"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="horizontal"
                android:layout_below="@+id/radomword" >

<!--                <Button-->
<!--                    android:id="@+id/hint"-->
<!--                    android:layout_below="@+id/hintsection"-->
<!--                    android:layout_width="80dp"-->
<!--                    android:layout_height="50dp"-->
<!--                    android:text="!"-->
<!--                    android:textColor="#FFFFFF"-->
<!--                    android:textSize="25dp"-->
<!--                    android:textStyle="bold"-->
<!--                    android:gravity="left"-->
<!--                    android:background="@drawable/hint"-->
<!--                    android:visibility="visible" />-->

                <ImageButton
                    android:id="@+id/hint"
                    android:layout_below="@+id/hintsection"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="!"
                    android:textColor="#2F8A33"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:scaleType="fitCenter"
                    android:background="@drawable/my_custom_selector"
                    android:src="@drawable/hint"
                    android:onClick="displayHint"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/definition"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:background="#00D435"
                    android:fontFamily="@font/brawler"
                    android:textColor="#5F76A5"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="4dp"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeMaxTextSize="15sp"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </LinearLayout>

            <TextView
                android:id="@+id/counter"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#D4BF00"
                android:fontFamily="@font/brawler"
                android:gravity="center"
                android:textColor="#112142"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/raw1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1"
            android:background="#9F5858">

            <Button
                android:id="@+id/q"
                android:layout_width="48dp"
                android:layout_height="45dp"
                android:layout_marginRight="10dp"
                android:text="Q"
                tools:context=".MainActivity"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/w"
                android:layout_width="47dp"
                android:layout_height="45dp"
                android:layout_marginRight="10dp"
                android:text="W"
                tools:context=".MainActivity"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/e"
                android:layout_width="47dp"
                android:layout_height="45dp"
                android:layout_marginRight="10dp"
                android:text="E"
                tools:context=".MainActivity"
                tools:ignore="TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="130dp"
                tools:layout_editor_absoluteY="393dp" />

            <Button
                android:id="@+id/r"
                android:layout_width="47dp"
                android:layout_height="45dp"
                android:layout_marginRight="10dp"
                android:text="R"
                tools:ignore="TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="182dp"
                tools:layout_editor_absoluteY="393dp" />

            <Button
                android:id="@+id/t"
                android:layout_width="47dp"
                android:layout_height="45dp"
                android:layout_marginRight="10dp"
                android:text="T"
                tools:ignore="TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="236dp"
                tools:layout_editor_absoluteY="393dp" />

            <Button
                android:id="@+id/y"
                android:layout_width="47dp"
                android:layout_height="45dp"
                android:layout_marginRight="10dp"
                android:text="Y"
                tools:ignore="TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="291dp"
                tools:layout_editor_absoluteY="393dp" />

            <Button
                android:id="@+id/u"
                android:layout_width="47dp"
                android:layout_height="45dp"
                android:text="U"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/raw2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/raw1"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/i"
                android:layout_width="47dp"
                android:layout_height="45dp"
                android:text="I"
                tools:ignore="TouchTargetSizeCheck"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/o"
                android:layout_width="47dp"
                android:layout_height="45dp"
                android:text="O"
                tools:ignore="TouchTargetSizeCheck"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/p"
                android:layout_width="47dp"
                android:layout_height="45dp"
                android:text="P"
                tools:ignore="TouchTargetSizeCheck"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/a"
                android:layout_width="47dp"
                android:layout_height="45dp"
                android:text="A"
                tools:ignore="TouchTargetSizeCheck"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/s"
                android:layout_width="47dp"
                android:layout_height="45dp"
                android:text="S"
                tools:ignore="TouchTargetSizeCheck"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/d"
                android:layout_width="47dp"
                android:layout_height="45dp"
                android:text="D"
                tools:ignore="TouchTargetSizeCheck"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/raw3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/raw2"
            android:orientation="horizontal"
            android:weightSum="1" >

            <Button
                android:id="@+id/f"
                android:layout_width="47dp"
                android:layout_height="45dp"
                android:text="F"
                tools:ignore="TouchTargetSizeCheck"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/g"
                android:layout_width="47dp"
                android:layout_height="45dp"
                android:text="G"
                tools:ignore="TouchTargetSizeCheck"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/h"
                android:layout_width="47dp"
                android:layout_height="45dp"
                android:text="H"
                tools:ignore="TouchTargetSizeCheck"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/j"
                android:layout_width="47dp"
                android:layout_height="45dp"
                android:text="J"
                tools:ignore="TouchTargetSizeCheck"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/k"
                android:layout_width="47dp"
                android:layout_height="45dp"
                android:text="K"
                tools:ignore="TouchTargetSizeCheck"
                android:layout_marginRight="10dp"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/raw4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/raw3"
            android:orientation="horizontal"
            android:weightSum="1"
            android:background="#3FA6D8">

            <Button
                android:id="@+id/l"
                android:layout_width="47dp"
                android:layout_height="45dp"
                android:text="L"
                tools:ignore="TouchTargetSizeCheck"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/z"
                android:layout_width="47dp"
                android:layout_height="45dp"
                android:text="Z"
                tools:ignore="TouchTargetSizeCheck"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/x"
                android:layout_width="47dp"
                android:layout_height="45dp"
                android:text="X"
                tools:ignore="TouchTargetSizeCheck"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/c"
                android:layout_width="47dp"
                android:layout_height="45dp"
                android:text="C"
                tools:ignore="TouchTargetSizeCheck"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/raw5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/raw4"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1"
            android:background="#7596A6">

            <Button
                android:id="@+id/v"
                android:layout_width="47dp"
                android:layout_height="45dp"
                android:layout_marginRight="10dp"
                android:text="V"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/b"
                android:layout_width="47dp"
                android:layout_height="45dp"
                android:layout_marginRight="10dp"
                android:text="B"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/n"
                android:layout_width="47dp"
                android:layout_height="45dp"
                android:layout_marginRight="10dp"
                android:text="N"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/m"
                android:layout_width="47dp"
                android:layout_height="45dp"
                android:layout_marginRight="10dp"
                android:text="M"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/raw5"
            android:background="#009688"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="60dp" >

<!--            <Button-->
<!--                android:id="@+id/reload"-->
<!--                android:layout_width="100dp"-->
<!--                android:layout_height="80dp"-->
<!--                android:gravity="center"-->
<!--                android:text="Reload" />-->

            <ImageButton
                android:id="@+id/reload"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:background="@drawable/my_custom_selector"
                android:onClick="reload"
                android:src="@drawable/reload"
                 />
            <TextView
                android:id="@+id/tmpword"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:background="#F1B928"
                android:gravity="center"
                android:text="" />

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>